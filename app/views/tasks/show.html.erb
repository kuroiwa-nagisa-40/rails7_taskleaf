<h1>タスクの詳細</h1>

<div class="nav justify-content-end">
  <%= link_to "一覧", tasks_path, class: "nav-link" %>
</div>

<div class="mb-3">
  <table class="table table-hover">
    <tbody>
      <tr>
        <th><%= Task.human_attribute_name(:id) %></th>
        <td><%= @task.id %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:title) %></th>
        <td><%= @task.title %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:description) %></th>
        <td>
          <%= auto_link(simple_format(h(@task.description), {}, sanitize: false, wrapper_tag: "div")) %>
        </td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:created_at) %></th>
        <td><%= @task.created_at %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:updated_at) %></th>
        <td><%= @task.updated_at %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "編集", edit_task_path(@task), class: "btn btn-primary mr-3" %>
  <%= link_to "削除", @task, method: :delete, data: { turbo_method: :delete, turbo_confirm: "#{@task.title}を本当に削除しますか？" }, class: "btn btn-danger" %>
</div>


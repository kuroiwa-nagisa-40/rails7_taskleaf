<h1>タスク一覧</h1>
<%= link_to "新規登録", new_task_path, class: "btn btn-primary" %>

<div class="mb-3">
  <table class="table table-hover">
    <tead class="thead-default">
      <tr>
        <th><%= Task.human_attribute_name(:title) %></th>
        <th><%= Task.human_attribute_name(:created_at) %></th>
        <th></th>
      </tr>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.title, task %></td>
            <td><%= task.created_at %></td>
            <td>
              <%= link_to "編集", edit_task_path(task), class: "btn btn-primary mr-3" %>
              <%= link_to '削除', task_path(task), data: { turbo_method: :delete, turbo_confirm: "#{task.title}を本当に削除しますか？" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </tead>
  </table>
</div>
